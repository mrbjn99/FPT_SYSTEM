@model AsmAppDev2.ViewModels.TrainerUserViewModel
@{
	ViewBag.Title = "Create";
}

<h2>Create</h2>
@Html.AntiForgeryToken()
@Html.ValidationSummary(false, "", new { @class = "text-danger" })
@using (Html.BeginForm())
{
	<div class="form-group">
		@Html.LabelFor(tp => tp.TrainerUser.TrainerID)
		@Html.DropDownListFor(tp => tp.TrainerUser.TrainerID, new SelectList(Model.Trainers, "ID", "UserName"), "", new { @class = "form-control" })
	</div>

	<div class="form-group">
		@Html.LabelFor(tp => tp.TrainerUser.Full_Name)
		@Html.TextBoxFor(tp => tp.TrainerUser.Full_Name, new { @class = "form-control" })
		@Html.ValidationMessageFor(tp => tp.TrainerUser.Full_Name)
	</div>

	<div class="form-group">
		@Html.LabelFor(tp => tp.TrainerUser.Working_Place)
		@Html.TextBoxFor(tp => tp.TrainerUser.Working_Place, new { @class = "form-control" })
		@Html.ValidationMessageFor(tp => tp.TrainerUser.Working_Place)
	</div>

	<div class="form-group">
		@Html.LabelFor(tp => tp.TrainerUser.Phone)
		@Html.TextBoxFor(tp => tp.TrainerUser.Phone, new { @class = "form-control" })
		@Html.ValidationMessageFor(tp => tp.TrainerUser.Phone)
	</div>

	<button type="submit" class="btn btn-default">Add</button>
}

	@Html.ActionLink("Back to List", "Index")
