@model AsmAppDev2.Models.ApplicationUser

@{
    ViewBag.Title = "Edit";
}

<h2>Edit Account</h2>


@using (Html.BeginForm("Edit", "Admins", FormMethod.Post))
{
    @Html.HiddenFor(u => u.Id)
    <div class="form-group">
        @Html.LabelFor(u => u.UserName)
        @Html.EditorFor(u => u.UserName, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(u => u.UserName, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(u => u.Email)
        @Html.EditorFor(u => u.Email, new { htmlAttributes = new { @class = "form-control" } })
    </div>

    <div class="form-group">
        @Html.LabelFor(u => u.PhoneNumber)
        @Html.EditorFor(u => u.PhoneNumber, new { htmlAttributes = new { @class = "form-control" } })
    </div>


    <button type="submit" class="btn btn-primary">Edit</button>
}
