@model AsmAppDev2.ViewModels.TraineeUserViewModel
@{
	ViewBag.Title = "Create";
}

<h2>Add Profile Trainee</h2>

@Html.AntiForgeryToken()
@Html.ValidationSummary(false, "", new { @class = "text-danger" })
@using (Html.BeginForm())
{
	<div class="form-group">
		@Html.LabelFor(tp => tp.TraineeUser.TraineeID)
		@Html.DropDownListFor(tp => tp.TraineeUser.TraineeID, new SelectList(Model.Trainees, "ID", "UserName"), "", new { @class = "form-control" }
		)
	</div>

	<div class="form-group">
		@Html.LabelFor(tp => tp.TraineeUser.Full_Name)
		@Html.TextBoxFor(tp => tp.TraineeUser.Full_Name, new { @class = "form-control" })
		@Html.ValidationMessageFor(tp => tp.TraineeUser.Full_Name)
	</div>

	<div class="form-group">
		@Html.LabelFor(tp => tp.TraineeUser.Email)
		@Html.TextBoxFor(tp => tp.TraineeUser.Email, new { @class = "form-control" })
		@Html.ValidationMessageFor(tp => tp.TraineeUser.Email)
	</div>

	<div class="form-group">
		@Html.LabelFor(tp => tp.TraineeUser.Education)
		@Html.TextBoxFor(tp => tp.TraineeUser.Education, new { @class = "form-control" })
		@Html.ValidationMessageFor(tp => tp.TraineeUser.Education)
	</div>

	<div class="form-group">
		@Html.LabelFor(tp => tp.TraineeUser.Programming_Language)
		@Html.TextBoxFor(tp => tp.TraineeUser.Programming_Language, new { @class = "form-control" })
		@Html.ValidationMessageFor(tp => tp.TraineeUser.Programming_Language)
	</div>

	<div class="form-group">
		@Html.LabelFor(tp => tp.TraineeUser.Experience_Details)
		@Html.TextBoxFor(tp => tp.TraineeUser.Experience_Details, new { @class = "form-control" })
		@Html.ValidationMessageFor(tp => tp.TraineeUser.Experience_Details)
	</div>

	<div class="form-group">
		@Html.LabelFor(tp => tp.TraineeUser.Department)
		@Html.TextBoxFor(tp => tp.TraineeUser.Department, new { @class = "form-control" })
		@Html.ValidationMessageFor(tp => tp.TraineeUser.Department)
	</div>

	<button type="submit" class="btn btn-default">Add</button>
}

