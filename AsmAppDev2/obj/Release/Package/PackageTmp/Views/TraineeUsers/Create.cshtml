@model AsmAppDev2.Models.TraineeUser
@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>
@using (Html.BeginForm())
{
    <div class="form-group">
        @Html.LabelFor(tp => tp.TraineeID)
        @Html.DropDownListFor(tp => tp.TraineeID
            , new SelectList(Model.Trainees, "ID", "Email"),
            "Select Trainee",
            new { @class = "form-control" }
        )
    </div>

    <div class="form-group">
        @Html.LabelFor(tp => tp.Full_Name)
        @Html.TextBoxFor(tp => tp.Full_Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(tp => tp.Full_Name)
    </div>

    <div class="form-group">
        @Html.LabelFor(tp => tp.Education)
        @Html.TextBoxFor(tp => tp.Education, new { @class = "form-control" })
        @Html.ValidationMessageFor(tp => tp.Education)
    </div>

    <div class="form-group">
        @Html.LabelFor(tp => tp.Programming_Language)
        @Html.TextBoxFor(tp => tp.Programming_Language, new { @class = "form-control" })
        @Html.ValidationMessageFor(tp => tp.Programming_Language)
    </div>

    <div class="form-group">
        @Html.LabelFor(tp => tp.Experience_Details)
        @Html.TextBoxFor(tp => tp.Experience_Details, new { @class = "form-control" })
        @Html.ValidationMessageFor(tp => tp.Experience_Details)
    </div>

    <div class="form-group">
        @Html.LabelFor(tp => tp.Department)
        @Html.TextBoxFor(tp => tp.Department, new { @class = "form-control" })
        @Html.ValidationMessageFor(tp => tp.Department)
    </div>

    <button type="submit" class="btn btn-default">Add</button>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>