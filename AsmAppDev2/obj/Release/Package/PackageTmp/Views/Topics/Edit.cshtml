@model AsmAppDev2.ViewModels.CourseTopicViewModel
@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@Html.ValidationSummary(false, "", new { @class = "text-danger" })

@using (Html.BeginForm())
{
    @Html.HiddenFor(t => t.Topic.ID)
    <div class="form-group">
        @Html.LabelFor(t => t.Topic.Name)
        @Html.EditorFor(t => t.Topic.Name, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(t => t.Topic.Name, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(t => t.Topic.Description)
        @Html.EditorFor(t => t.Topic.Description, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(t => t.Topic.Description, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(t => t.Topic.Course.Name)
        @Html.DropDownListFor(t => t.Topic.CourseID, new SelectList(Model.Courses, "Id", "Name"), "", new { @class = "form-control" })
    </div>
    <button type="submit" class="btn btn-default">Edit</button>
}
<div>
    @Html.ActionLink("Back to List", "Index")
</div>